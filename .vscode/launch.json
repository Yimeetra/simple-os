{
  "version": "0.2.0",
  "configurations": [

    {
      "name": "GDB remote QEMU",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/kernel.o",    // путь к твоему elf-файлу
      "miDebuggerServerAddress": "localhost:1234",
      "miDebuggerPath": "gdb",              // или путь к gdb
      "cwd": "${workspaceFolder}",
      "MIMode": "gdb",
      "stopAtEntry": true,
      "externalConsole": false,
      "setupCommands": [
        {
          "description": "Enable pretty printing",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        },
        {
          "description": "Disassemble next line",
          "text": "set disassemble-next-line on"
        },
        {
          "description": "Set architecture if needed",
          "text": "set architecture i386"
        },
        {
          "text": "set architecture i386"
        },
        {
          "text": "set pagination off"
        },
        {
          "text": "set confirm off"
        }
      ]
    }
  ]
}